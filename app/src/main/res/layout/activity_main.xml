<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#073451"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/enterButton"
        android:layout_width="134dp"
        android:layout_height="46dp"
        android:layout_marginStart="129dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="104dp"
        android:background="#1F2857"
        android:fontFamily="@font/adamina"
        android:onClick="derive"
        android:text="Derive!"
        android:textColor="#F3EFEF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="202dp"
        android:layout_height="70dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/adamina"
        android:text="Derivative Calculator App"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstCoefficient"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp"
        android:fontFamily="@font/adamina"
        android:text="First Coeffiecient:"
        android:textAlignment="center"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toStartOf="@+id/secondCoefficient"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/secondPowerInput"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"

        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F4F0F0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/secondPower"
        app:layout_constraintStart_toStartOf="@+id/secondPower"
        app:layout_constraintTop_toBottomOf="@+id/secondPower" />

    <TextView
        android:id="@+id/polynomialOutput"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginBottom="35dp"
        android:text="Polynomial Derived: "
        android:textColor="#EDE7E7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/enterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xPointInput"
        app:layout_constraintVertical_bias="0.298" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="190dp"
        android:layout_height="444dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPowerInput"
        app:srcCompat="@drawable/killua2" />

    <EditText
        android:id="@+id/firstCoefficientInput"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F8F4F4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/firstCoefficient"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/firstCoefficient"
        app:layout_constraintTop_toBottomOf="@+id/firstCoefficient" />

    <EditText
        android:id="@+id/secondCoefficientInput"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"

        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F8F4F4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/secondCoefficient"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/secondCoefficient"
        app:layout_constraintTop_toBottomOf="@+id/secondCoefficient" />

    <EditText
        android:id="@+id/firstPowerInput"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"

        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F4F0F0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/firstPower"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/firstPower"
        app:layout_constraintTop_toBottomOf="@+id/firstPower" />

    <TextView
        android:id="@+id/resultOutput"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:text="Result: "
        android:textColor="#EDE7E7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/enterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xPointInput" />

    <EditText
        android:id="@+id/thirdPowerInput"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F4F0F0"
        android:textColorHint="#0E0D0D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/thirdPower"
        app:layout_constraintStart_toStartOf="@+id/thirdPower"
        app:layout_constraintTop_toBottomOf="@+id/thirdPower" />

    <TextView
        android:id="@+id/thirdCoefficient"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/adamina"
        android:text="Third Coeffiecient:"
        android:textAlignment="center"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/secondCoefficient"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/xPointInput"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F1E6E6"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/xPoint"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/xPoint"
        app:layout_constraintTop_toBottomOf="@+id/xPoint" />

    <TextView
        android:id="@+id/xPoint"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="95dp"
        android:fontFamily="@font/adamina"
        android:text="At what point do you want your derivative evaluated:"
        android:textAlignment="center"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdPowerInput" />

    <TextView
        android:id="@+id/secondPower"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/adamina"
        android:text="Second Power:"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondCoefficientInput" />

    <TextView
        android:id="@+id/firstPower"
        android:layout_width="88dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="39dp"
        android:fontFamily="@font/adamina"
        android:text="First Power:"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toStartOf="@+id/secondPower"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstCoefficientInput" />

    <TextView
        android:id="@+id/thirdPower"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/adamina"
        android:text="Third Power:"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toEndOf="@+id/secondPower"
        app:layout_constraintTop_toBottomOf="@+id/thirdCoefficientInput" />

    <EditText
        android:id="@+id/thirdCoefficientInput"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"

        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:text=""
        android:textColor="#F8F4F4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/thirdCoefficient"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/thirdCoefficient"
        app:layout_constraintTop_toBottomOf="@+id/thirdCoefficient" />

    <TextView
        android:id="@+id/secondCoefficient"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/adamina"
        android:text="Second Coeffiecient:"
        android:textAlignment="center"
        android:textColor="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="121dp"
        android:layout_height="231dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/gonn" />

</androidx.constraintlayout.widget.ConstraintLayout>